<% provide(:app_name, 'Worklog') %>
<% provide(:app_author, 'Mahesh Asolkar') %>
<% provide(:copy_year, '2013') %>
<!DOCTYPE html>
<html lang=en>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Periodic Work Log">
  <meta name="author" content="Mahesh Asolkar">
  <title><%= yield(:app_name) %> | <%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'shared/gplussignin_head_script' %>
  <!-- Fav and touch icons -->
  <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/ico/apple-touch-icon-144-precomposed.png">
  <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
  <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
  <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png">
  <link rel="shortcut icon" href="../assets/ico/favicon.png">
</head>
<body>
  <div class="container-narrow">

    <%= render 'layouts/header' %>

    <% if content_for?(:bold_content) %>
    <%= yield(:bold_content) %>
    <% end %>

    <%= yield %>

    <%= render 'layouts/footer' %>

  </div> <!-- /container -->

  <%= render 'shared/gplussignin_body_script' %>
</body>
</html>

