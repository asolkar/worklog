<% provide(:title, 'User Info - ' + "#{@user.fullname}") %>

<% content_for :breadcrumbs do %>
<div class="row">
  <div class="span7">
  <ul class="breadcrumb">
    <%= render 'shared/breadcrumb_user_info' %>
    <%= link_to 'User settings', edit_path(@user), :class => 'btn btn-mini pull-right' %>
  </ul>
  </div><!-- /.span7 -->
</div><!-- /.row -->
<% end %>

<div class="row">
  <div class="span5">
    <dl class="dl-horizontal">
      <dt>Name</dt><dd><%= @user.fullname %></dd>
      <dt>Username</dt><dd><%= @user.username %></dd>
      <dt>E-mail</dt><dd><%= @user.email %></dd>
      <dt>Member since</dt><dd><%= @user.created_at.to_s(:member_since) %></dd>
    </dl>
    <%= render 'shared/gplussignin_button' %>
  </div><!-- /.span5 -->
  <div class="span2">
  <% if session[:gplus_id] %>
    <%= image_tag(@user.gplus_avatar_thumb_url, :class => 'img-polaroid') %>
  <% else %>
    <%= image_tag(@user.avatar.thumb.url, :class => 'img-polaroid') %>
  <% end %>
  </div><!-- /.span2 -->
</div><!-- /.row -->

<hr class="invisible">

<div class="row">
  <div class="span2">
  </div><!-- /.span2 -->
</div><!-- /.row -->

<hr class="invisible">

<div class="row">
  <div class="span7">
    <ul class="breadcrumb">
      <li><strong>Logs</strong></li>
      <%= link_to 'Start a new Log', new_log_path(@user), :class => 'btn btn-mini pull-right' %>
    </ul>
    <%= paginate @logs %>
    <%= render @logs %>
  </div><!-- /.span7 -->
</div><!-- /.row -->

<hr class="invisible">

<div class="row">
  <div class="span7">
    <ul class="breadcrumb">
      <li><strong>Tags</strong></li>
      <%= link_to 'Create a new Tag', new_tag_path(@user), :class => 'btn btn-mini pull-right' %>
    </ul>
    <%= render @tags %>
  </div><!-- /.span7 -->
</div><!-- /.row -->

