<%= div_for tag do %>
  <div class="tag_body" style="background-color: #<%= tag.color %>">
    <div class="tag_control badge badge-important">
      <%= link_to edit_tag_path(tag.user, tag),
                  :rel => 'tooltip',
                  :title => 'Edit tag' do %>
        <i class="icon-edit"></i>
      <% end %>
        &nbsp;
      <%= link_to tag_path(tag.user, tag),
                  :confirm => 'Are you sure you want to delete this tag?',
                  :method => :delete,
                  :rel => 'tooltip',
                  :title => 'Delete tag' do %>
        <i class="icon-remove"></i>
      <% end %>
    </div>
    <%= tag.name %>
  </div>
<% end %>
