<%= div_for entry do %>
  <tr class="log_entry">
    <td class="span5 log_entry_body"><%= entry.body %></td>
    <td class="span1 log_entry_ctrl"><%= link_to user_log_entry_path(entry.log.user, entry.log, entry),
                    :confirm => 'Are you sure you want to delete this entry?',
                    :method => :delete,
                    :rel => 'tooltip',
                    :title => 'Delete entry' do %>
        <i class="icon-remove"></i>
      <% end %>
    </td>
  </tr>
<% end %>
