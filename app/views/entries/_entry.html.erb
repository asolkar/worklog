<%= div_for entry do %>
  <tr>
    <td class="span8"><%= entry.body %></td>
    <td>
      <%= link_to user_log_entry_path(entry.log.user, entry.log, entry),
                  :confirm => 'Are you sure you want to delete this entry?',
                  :method => :delete,
                  :rel => 'tooltip',
                  :title => 'Delete entry' do %>
        <i class="icon-remove"></i>
      <% end %>
    </td>
  </tr>
<% end %>
