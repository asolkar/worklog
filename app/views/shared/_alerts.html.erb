<% if !notice.blank? %>
<p class="alert alert-info">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <%= notice %>
</p>
<% end %>
<% if !alert.blank? %>
<p class="alert">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <%= alert %>
</p>
<% end %>
