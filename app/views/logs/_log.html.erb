<%= div_for log do %>
  <div class="span3 log_body">
    <div class="log_control badge badge-important">
      <%= link_to edit_log_path(log.user, log),
                  :rel => 'tooltip',
                  :title => 'Edit log' do %>
        <i class="icon-edit"></i>
      <% end %>
        &nbsp;
      <%= link_to log_path(log.user, log),
                  :confirm => 'Are you sure you want to delete this log?',
                  :method => :delete,
                  :rel => 'tooltip',
                  :title => 'Delete log' do %>
        <i class="icon-remove"></i>
      <% end %>
    </div>
    <h3><%= link_to log.name, log_path(log.user, log) %></h3>
    <%= log.description %>
  </div>
<% end %>
